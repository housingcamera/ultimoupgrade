<config>
    <modules>
        <OlegKoval_ContactsFormCaptcha>
            <version>1.3.1</version>
            <depends>
                <Mage_Contacts/>
            </depends>
        </OlegKoval_ContactsFormCaptcha>
    </modules>

    <global>
        <blocks>
          <contactsformcaptcha>
            <class>OlegKoval_ContactsFormCaptcha_Block</class>
          </contactsformcaptcha> 
        </blocks>

        <models>
            <contactsformcaptcha>
                <class>OlegKoval_ContactsFormCaptcha_Model</class>
            </contactsformcaptcha>
        </models>
    </global>

    <frontend>
        <routers>
            <contacts>
                <args>
                    <modules>
                        <contactsformcaptcha before="Mage_Customer">OlegKoval_ContactsFormCaptcha</contactsformcaptcha>
                    </modules>
                </args>
            </contacts>
        </routers>
        <translate>
            <modules>
                <OlegKoval_ContactsFormCaptcha>
                    <files>
                        <default>OlegKoval_ContactsFormCaptcha.csv</default>
                    </files>
                </OlegKoval_ContactsFormCaptcha>
            </modules>
        </translate>
        <layout>
            <updates>
                <contactsformcaptcha module="OlegKoval_ContactsFormCaptcha">
                    <file>contactsformcaptcha.xml</file>
                </contactsformcaptcha>
            </updates>
        </layout>
    </frontend>
    
    <adminhtml>
        <translate>
            <modules>
                <OlegKoval_ContactsFormCaptcha>
                    <files>
                        <default>OlegKoval_ContactsFormCaptcha.csv</default>
                    </files>
                </OlegKoval_ContactsFormCaptcha>
            </modules>
        </translate>
    </adminhtml>
</config>