<config>

    <events>
        <catalog_product_save_after>
            <observers>
                <amlabel>
                    <class>amlabel/observer</class>
                    <method>applyLabels</method>
                </amlabel>
            </observers>
        </catalog_product_save_after>
        
        <core_block_abstract_to_html_before>
            <observers>
                <amlabel>
                    <type>singleton</type>
                    <class>amlabel/observer</class>
                    <method>onCoreBlockAbstractToHtmlBefore</method>
                </amlabel>
            </observers>
        </core_block_abstract_to_html_before>
    </events>

	<menu>
	    <catalog>
            <children>
                <amlabel translate="title" module="amlabel">
                    <title>Product Labels</title>
                    <action>amlabel/adminhtml_label</action>
                    <sort_order>800</sort_order>
                </amlabel>
            </children>
        </catalog>
	</menu>     

	<acl>
		<resources>
			<all>
				<title>Allow Everything</title>
			</all>
            <admin>
                <children>
                    <catalog>
                        <children>
                            <products>
                                <children>
                                    <assign_labels translate="title">
                                        <title>Assign Labels</title>
                                    </assign_labels>
                                </children>
                            </products>
                            <amlabel>
                                <title>Product Labels</title>
                            </amlabel>
                        </children>
                    </catalog>    
                    <system>
                        <children>
                            <config>
                                <children>
                                    <amlabel>
                                        <title>Product Labels</title>
                                    </amlabel>
                                </children>
                            </config>
                        </children>
                    </system>                     
                 </children>
            </admin> 
		</resources>
	</acl>
    
    <translate>
        <modules>
            <Amasty_Label>
                <files>
                    <default>Amasty_Label.csv</default>
                </files>
            </Amasty_Label>
        </modules>
    </translate>
    
</config> 