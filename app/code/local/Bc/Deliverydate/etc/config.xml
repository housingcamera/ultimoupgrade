<config>
    <modules>
        <Bc_Deliverydate>
            <version>0.1.8</version>
        </Bc_Deliverydate>
    </modules>
    <frontend>
        <routers>
            <deliverydate>
                <use>standard</use>
                <args>
                    <module>Bc_Deliverydate</module>
                    <frontName>deliverydate</frontName>
                </args>
            </deliverydate>
        </routers>
        <layout>
            <updates>
                <deliverydate>
                    <file>deliverydate.xml</file>
                </deliverydate>
            </updates>
        </layout>

        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <deliverydate_observer>
                        <type>singleton</type>
                        <class>deliverydate/observer</class>
                        <method>checkout_controller_onepage_save_shipping_method</method>
                    </deliverydate_observer>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <sales_order_save_after>
                <observers>
                    <order_set_shippingarrivaldate>
                        <type>model</type>
                        <class>Bc_Deliverydate_Helper_Data</class>
                        <method>saveShippingArrivalDate</method>
                    </order_set_shippingarrivaldate>
                </observers>
            </sales_order_save_after>
        </events>
    </frontend>
    <admin>
        <routers>
            <deliverydate>
                <use>admin</use>
                <args>
                    <module>Bc_Deliverydate</module>
                    <frontName>deliverydate</frontName>
                </args>
            </deliverydate>
        </routers>
    </admin>
    <adminhtml>
        <!--<menu>
        <deliverydate module="deliverydate">
        <title>Deliverydate</title>
        <sort_order>71</sort_order>               
        <children>
        <items module="deliverydate">
        <title>Manage Items</title>
        <sort_order>0</sort_order>
        <action>deliverydate/adminhtml_deliverydate</action>
        </items>
        </children>
        </deliverydate>
        </menu>-->
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Bc_Deliverydate>
                            <title>Deliverydate Module</title>
                            <sort_order>10</sort_order>
                        </Bc_Deliverydate>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <deliverydate>
                                            <title>Delivery Date</title>
                                        </deliverydate>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <deliverydate>
                    <file>deliverydate.xml</file>
                </deliverydate>
            </updates>
        </layout>
         <events>
            <sales_order_save_after>
                <observers>
                    <set_order_shippingarrivaldate>
                        <type>model</type>
                        <class>Bc_Deliverydate_Helper_Data</class>
                        <method>saveShippingArrivalDateAdmin</method>
                    </set_order_shippingarrivaldate>
                </observers>
            </sales_order_save_after>
            
        </events>
    </adminhtml>
    <global>
        <models>
            <deliverydate>
                <class>Bc_Deliverydate_Model</class>
                <resourceModel>deliverydate_mysql4</resourceModel>
            </deliverydate>
            <deliverydate_mysql4>
                <class>Bc_Deliverydate_Model_Mysql4</class>
                <entities>
                    <deliverydate>
                        <table>deliverydate</table>
                    </deliverydate>
                </entities>
            </deliverydate_mysql4>
        </models>
        <resources>
            <deliverydate_setup>
                <setup>
                    <module>Bc_Deliverydate</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </deliverydate_setup>
            <deliverydate_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </deliverydate_write>
            <deliverydate_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </deliverydate_read>
        </resources>
        <blocks>
            <deliverydate>
                <class>Bc_Deliverydate_Block</class>
            </deliverydate>
            <sales>
                <rewrite>
                    <order_info>Bc_Deliverydate_Block_Order_Info</order_info>
                </rewrite>
            </sales>
        </blocks>
        <helpers>
            <deliverydate>
                <class>Bc_Deliverydate_Helper</class>
            </deliverydate>
        </helpers>
        <default>
            <deliverydate>
                <deliverydate_general>
                    <enabled>0</enabled> 
                    <on_which_page>1</on_which_page>   
                    <deliverydate_html>Please choose your preferrable future delivery time for current #order.</deliverydate_html>                                        
                    <deliverydate_format>d/M/Y</deliverydate_format>
                    <deliverytime_format>g:i a</deliverytime_format>
                    <deliverydate_dayoff></deliverydate_dayoff>
                </deliverydate_general>
            </deliverydate>
        </default>
    </global>
</config>