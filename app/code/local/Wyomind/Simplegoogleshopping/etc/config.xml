<?xml version="1.0"?>
<!-- 
/**
* @category   Wyomind
* @package    Wyomind_Simplegoogleshopping
* @license    http://wyomind.com
*/
--> 
<config>
    <modules>
        <Wyomind_Simplegoogleshopping>
            <version>9.0.2</version> 
        </Wyomind_Simplegoogleshopping> 
    </modules> 
    <default>
        <simplegoogleshopping>
            <license>
                <version>9.0.2</version>
            </license>
            <setting>
                <report_title>Simple Google Shopping - report </report_title>
            </setting>
            <system>
                <preview>10</preview>
                <buffer>10</buffer>
                <sqlsize>1500</sqlsize>
                <filters>10</filters>
                <filters_sql>0</filters_sql>
                <include_in_menu>0</include_in_menu>
                <memory_limit>1024</memory_limit>
                <error_reporting>0</error_reporting>
            </system>
        </simplegoogleshopping>
    </default>
    <frontend>
        <routers>
            <simplegoogleshopping>
                <use>standard</use>
                <args>
                    <module>Wyomind_Simplegoogleshopping</module>
                    <frontName>simplegoogleshopping</frontName>
                </args>
            </simplegoogleshopping>
        </routers>  
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Wyomind_Simplegoogleshopping after="Mage_Adminhtml">Wyomind_Simplegoogleshopping_Adminhtml</Wyomind_Simplegoogleshopping>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <catalog>
                <children>
                    <simplegoogleshopping translate="title" module="simplegoogleshopping">
                        <title>Simple Google Shopping</title>
                        <sort_order>200</sort_order>
                        <action>adminhtml/simplegoogleshopping</action>
                    </simplegoogleshopping>
                </children>
            </catalog>
        </menu>
        <acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <simplegoogleshopping translate="title" module="simplegoogleshopping">
                                    <title>Simple Google Shopping</title>
                                </simplegoogleshopping>
                            </children>
                        </catalog>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <simplegoogleshopping>
                                            <title>Simple Google Shopping</title>
                                        </simplegoogleshopping>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
		
		
		
        <translate>
            <modules>
                <Wyomind_Simplegoogleshopping>
                    <files>
                        <default>Wyomind_Simplegoogleshopping.csv</default>
                    </files>
                </Wyomind_Simplegoogleshopping>
            </modules>
        </translate>
        <layout>
            <updates>
                <simplegoogleshopping>
                    <file>simplegoogleshopping.xml</file>
                </simplegoogleshopping>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <simplegoogleshopping>
                <class>Wyomind_Simplegoogleshopping_Model</class>
                <resourceModel>simplegoogleshopping_mysql4</resourceModel>
            </simplegoogleshopping>
            <simplegoogleshopping_mysql4>
                <class>Wyomind_Simplegoogleshopping_Model_Mysql4</class>
                <entities>
                    <simplegoogleshopping>
                        <table>simplegoogleshopping</table>
                    </simplegoogleshopping>
                </entities>
            </simplegoogleshopping_mysql4>
        </models>
        <resources>
            <simplegoogleshopping_setup>
                <setup>
                    <module>Wyomind_Simplegoogleshopping</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </simplegoogleshopping_setup>
            <simplegoogleshopping_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </simplegoogleshopping_write>
            <simplegoogleshopping_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </simplegoogleshopping_read>
        </resources>
        <blocks>
            <simplegoogleshopping>
                <class>Wyomind_Simplegoogleshopping_Block</class>
            </simplegoogleshopping>
        </blocks>
        <helpers>
            <simplegoogleshopping>
                <class>Wyomind_Simplegoogleshopping_Helper</class>
            </simplegoogleshopping>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <simplegoogleshopping_generate>
                <schedule>
                    <cron_expr>*/30 * * * *</cron_expr>
                </schedule>
                <run> 
                    <model>simplegoogleshopping/observer::generateFeeds</model>
                </run>
            </simplegoogleshopping_generate>
        </jobs>
    </crontab>
</config>