<?php $max_per_line = 4;?>
<?php $cols = $max_per_line;?>
<?php if( sizeof($this->getTotals()) > 0 ): ?>
<div class="box" id="rewardpoints_dashboard_diagram_totals">
    <div class="entry-edit reward-points-entry-edit">
        <img src="<?php echo $this->getSkinUrl('images/logo-rewards.png') ?>" alt="J2T Reward engine" class="reward-admin-logo" />
        <table cellspacing="0" width="100%">
            <?php foreach( $this->getTotals() as $_total ): ?>
            <?php if ($cols == $max_per_line):?><tr><?php endif;?>
                <td class="a-center bold">
                    <span><?php echo $_total['label'] ?></span><br />
                    <span class="nowrap" style="font-size:18px; color:#87a900;"><?php echo $_total['value'] ?><span style="font-size:14px; color:#DE8946;"><?php echo $_total['decimals'] ?></span></span>
                </td>
            <?php if ($cols == 0):?></tr><?php endif;?>
            <?php $cols--; $cols = ($cols == -1) ? $max_per_line : $cols; endforeach; ?>
            
            <?php if ($cols < $max_per_line):?>
                <?php while ($cols >= 0):?>
                    <td class="a-center bold">
                        <span>&nbsp;</span><br />
                        <span class="nowrap" style="font-size:18px; color:#87a900;">&nbsp;</span>
                    </td>
                <?php $cols--; endwhile;?>
                </tr>
            <?php endif;?>
            
        </table>
    </div>
</div>
<?php endif; ?>
