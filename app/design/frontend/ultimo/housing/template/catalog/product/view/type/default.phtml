<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */?>
<?php $_product = $this->getProduct();
        $_sku = $_product->getSku();
        $pos = strpos($_sku, "USED");
?>

<?php echo $this->getChildHtml('product_type_data_extra') ?>
<?php if ($this->displayProductStockStatus()): ?>
	<?php if ($_product->isAvailable()): ?>
	    <p class="availability in-stock"><?php echo $this->__('Availability:') ?> <span itemprop="availability"><?php echo $this->__('Usually In stock') ?></span></p>
       <meta itemprop="availability" content="http://schema.org/InStock">
	<?php else: ?>
            <?php if ($pos !== false): ?>
                <a class="search_chat" href="#" onclick="jQuery('#category-form-modal').reveal(); return false;" title="Contact Seller">Contact Seller</a>
            <?php else: ?>
                <p class="availability out-of-stock"><?php echo $this->__('Availability:') ?> <span><?php echo $this->__('Out of stock') ?></span></p>
                <meta itemprop="availability" content="http://schema.org/OutOfStock">
            <?php endif; ?>
	<?php endif; ?>
<?php endif; ?>
<?php echo $this->getPriceHtml($_product) ?>
